{% comment %}
  GBL Accessories Service Highlights
  - Black background with gold icon highlights
  - Four service features: Fast Shipping, Money Guarantee, Online Support, Flexible Payment
  - Customizable icons via image upload
  - Responsive layout
{% endcomment %}

{%- style -%}
    .gbl-service-highlights {
      background-color: #000000;
      color: #ffffff;
      padding: 25px 0;
    }
  
    .gbl-service-highlights__container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      padding: 0 20px;
    }
  
    .gbl-service-highlights__item {
      display: flex;
      align-items: center;
      padding: 10px 15px;
    }
  
    .gbl-service-highlights__icon-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 15px;
    }
  
    .gbl-service-highlights__icon {
      width: 30px;
      height: 30px;
      fill: #d4af37;
      stroke: #d4af37;
    }
  
    .gbl-service-highlights__custom-icon {
      width: 30px;
      height: 30px;
      object-fit: contain;
    }
  
    .gbl-service-highlights__content {
      display: flex;
      flex-direction: column;
    }
  
    .gbl-service-highlights__title {
      font-size: 16px;
      font-weight: 500;
      margin-bottom: 4px;
      color: #d4af37;
    }
  
    .gbl-service-highlights__description {
      font-size: 14px;
      line-height: 1.4;
      color: rgba(255, 255, 255, 0.8);
    }
  
    @media screen and (max-width: 1080px) {
      .gbl-service-highlights__container {
        justify-content: center;
      }
      
      .gbl-service-highlights__item {
        width: 50%;
        padding: 10px;
      }
    }
  
    @media screen and (max-width: 767px) {
      .gbl-service-highlights__item {
        width: 100%;
      }
    }
  {%- endstyle -%}
  
  <div class="gbl-service-highlights">
    <div class="gbl-service-highlights__container">
      {% for block in section.blocks %}
        <div class="gbl-service-highlights__item" {{ block.shopify_attributes }}>
          <div class="gbl-service-highlights__icon-wrapper">
            {% if block.settings.custom_icon != blank %}
              {{ block.settings.custom_icon | image_url: width: 60 | image_tag: 
                class: 'gbl-service-highlights__custom-icon',
                loading: 'lazy',
                alt: block.settings.title
              }}
            {% else %}
              {% case block.settings.icon %}
                {% when 'shipping' %}
                  <svg class="gbl-service-highlights__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3 7h18v12H3V7z" stroke-width="1.5" stroke-linejoin="round"/>
                    <path d="M7 7V4h10v3" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M9 12h6" stroke-width="1.5" stroke-linecap="round"/>
                  </svg>
                {% when 'money' %}
                  <svg class="gbl-service-highlights__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="9" stroke-width="1.5"/>
                    <path d="M12 7v10M15 10h-4.5c-.828 0-1.5.672-1.5 1.5 0 .828.672 1.5 1.5 1.5h3c.828 0 1.5.672 1.5 1.5 0 .828-.672 1.5-1.5 1.5H9" stroke-width="1.5" stroke-linecap="round"/>
                  </svg>
                {% when 'support' %}
                  <svg class="gbl-service-highlights__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4 10a8 8 0 1116 0v4a8 8 0 01-16 0v-4z" stroke-width="1.5"/>
                    <path d="M8 10v4a4 4 0 108 0v-4" stroke-width="1.5"/>
                    <path d="M17 18a2 2 0 104 0" stroke-width="1.5"/>
                    <path d="M3 18a2 2 0 114 0" stroke-width="1.5"/>
                  </svg>
                {% when 'payment' %}
                  <svg class="gbl-service-highlights__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="3" y="5" width="18" height="14" rx="2" stroke-width="1.5"/>
                    <path d="M3 10h18" stroke-width="1.5" stroke-linecap="round"/>
                    <path d="M7 15h2" stroke-width="1.5" stroke-linecap="round"/>
                  </svg>
                {% else %}
                  <svg class="gbl-service-highlights__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="9" stroke-width="1.5"/>
                    <path d="M12 8v4" stroke-width="1.5" stroke-linecap="round"/>
                    <circle cx="12" cy="16" r="1" fill="currentColor"/>
                  </svg>
              {% endcase %}
            {% endif %}
          </div>
          <div class="gbl-service-highlights__content">
            <h3 class="gbl-service-highlights__title">{{ block.settings.title }}</h3>
            <p class="gbl-service-highlights__description">{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  
  {% schema %}
  {
    "name": "Service Highlights",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "icon_color",
        "label": "Icon Color",
        "default": "#d4af37"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#d4af37"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#ffffff"
      }
    ],
    "blocks": [
      {
        "type": "service",
        "name": "Service Feature",
        "settings": [
          {
            "type": "select",
            "id": "icon",
            "label": "Default Icon",
            "options": [
              {
                "value": "shipping",
                "label": "Shipping"
              },
              {
                "value": "money",
                "label": "Money Guarantee"
              },
              {
                "value": "support",
                "label": "Support"
              },
              {
                "value": "payment",
                "label": "Payment"
              },
              {
                "value": "custom",
                "label": "Custom"
              }
            ],
            "default": "shipping",
            "info": "Select a built-in icon or upload a custom icon below"
          },
          {
            "type": "image_picker",
            "id": "custom_icon",
            "label": "Custom Icon",
            "info": "Upload a custom icon (SVG or PNG recommended). Will override the default icon if provided."
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Fast Shipping"
          },
          {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "Instant delivery to your location"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "GBL Service Highlights",
        "blocks": [
          {
            "type": "service",
            "settings": {
              "icon": "shipping",
              "title": "Fast Shipping",
              "description": "Instant delivery to your location"
            }
          },
          {
            "type": "service",
            "settings": {
              "icon": "money",
              "title": "Money Guarantee",
              "description": "Within 30 days for an exchange"
            }
          },
          {
            "type": "service",
            "settings": {
              "icon": "support",
              "title": "Online Support",
              "description": "24 hours a day, 7 days a week"
            }
          },
          {
            "type": "service",
            "settings": {
              "icon": "payment",
              "title": "Flexible Payment",
              "description": "Pay with multiple Credit Cards"
            }
          }
        ]
      }
    ]
  }
  {% endschema %}