{% comment %}
  GBL Accessories Footer
  - Black background with gold accents
  - Logo and about text
  - Multiple menu columns
  - Newsletter signup
  - Social icons
  - Payment icons
  - Copyright information
{% endcomment %}

{%- style -%}
    .gbl-footer {
      background-color: #000000;
      color: #ffffff;
      padding: 60px 0 20px;
    }
  
    .gbl-footer__container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
  
    .gbl-footer__top {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 30px;
      margin-bottom: 50px;
    }
  
    .gbl-footer__logo-column {
      grid-column: 1;
    }
  
    .gbl-footer__logo-wrapper {
      margin-bottom: 20px;
    }
  
    .gbl-footer__logo {
      max-width: 180px;
      height: auto;
    }
  
    .gbl-footer__tagline {
      font-size: 14px;
      color: rgba(255, 255, 255, 0.8);
      margin-top: 5px;
      font-style: italic;
    }
  
    .gbl-footer__about-text {
      font-size: 14px;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 20px;
    }
  
    .gbl-footer__social {
      display: flex;
      gap: 15px;
      margin-top: 20px;
    }
  
    .gbl-footer__social-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background-color: rgba(255, 255, 255, 0.1);
      color: #ffffff;
      transition: all 0.3s ease;
    }
  
    .gbl-footer__social-link:hover {
      background-color: #d4af37;
    }
  
    .gbl-footer__social-icon {
      width: 18px;
      height: 18px;
      fill: currentColor;
    }
  
    .gbl-footer__menu-column {
      display: flex;
      flex-direction: column;
    }
  
    .gbl-footer__menu-title {
      font-size: 16px;
      font-weight: 500;
      margin-bottom: 20px;
      color: #d4af37;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
  
    .gbl-footer__menu {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  
    .gbl-footer__menu-item {
      margin-bottom: 10px;
    }
  
    .gbl-footer__menu-link {
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      font-size: 14px;
      transition: color 0.3s ease;
    }
  
    .gbl-footer__menu-link:hover {
      color: #d4af37;
    }
  
    .gbl-footer__newsletter-form {
      display: flex;
      margin-bottom: 10px;
    }
  
    .gbl-footer__newsletter-input {
      flex: 1;
      padding: 12px 15px;
      border: none;
      background-color: rgba(255, 255, 255, 0.1);
      color: #ffffff;
      font-size: 14px;
    }
  
    .gbl-footer__newsletter-input::placeholder {
      color: rgba(255, 255, 255, 0.5);
    }
  
    .gbl-footer__newsletter-button {
      padding: 0 20px;
      background-color: #d4af37;
      border: none;
      color: #000000;
      font-weight: 500;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
  
    .gbl-footer__newsletter-button:hover {
      background-color: #c19b2f;
    }
  
    .gbl-footer__newsletter-disclaimer {
      font-size: 12px;
      color: rgba(255, 255, 255, 0.6);
      line-height: 1.4;
      margin-top: 10px;
    }
  
    .gbl-footer__newsletter-disclaimer a {
      color: rgba(255, 255, 255, 0.8);
      text-decoration: underline;
    }
  
    .gbl-footer__newsletter-disclaimer a:hover {
      color: #d4af37;
    }
  
    .gbl-footer__bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 20px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
  
    .gbl-footer__copyright {
      font-size: 12px;
      color: rgba(255, 255, 255, 0.6);
    }
  
    .gbl-footer__payment-icons {
      display: flex;
      gap: 10px;
    }
  
    .gbl-footer__payment-icon {
      height: 24px;
      width: auto;
      opacity: 0.8;
    }
  
    @media screen and (max-width: 990px) {
      .gbl-footer__top {
        grid-template-columns: 1fr 1fr;
      }
      
      .gbl-footer__logo-column {
        grid-column: span 2;
      }
    }
  
    @media screen and (max-width: 767px) {
      .gbl-footer__top {
        grid-template-columns: 1fr;
      }
      
      .gbl-footer__logo-column {
        grid-column: 1;
      }
      
      .gbl-footer__bottom {
        flex-direction: column;
        gap: 20px;
      }
      
      .gbl-footer__payment-icons {
        order: -1;
      }
    }
  {%- endstyle -%}
  
  <footer class="gbl-footer">
    <div class="gbl-footer__container">
      <div class="gbl-footer__top">
        <!-- Logo and About Column -->
        <div class="gbl-footer__logo-column">
          <div class="gbl-footer__logo-wrapper">
            {% if section.settings.logo != blank %}
              {{ section.settings.logo | image_url: width: 180 | image_tag: 
                class: 'gbl-footer__logo',
                loading: 'lazy',
                alt: shop.name
              }}
            {% else %}
              <span class="gbl-footer__logo-text">{{ shop.name }}</span>
            {% endif %}
            <div class="gbl-footer__tagline">{{ section.settings.tagline }}</div>
          </div>
          
          <div class="gbl-footer__about-text">{{ section.settings.about_text }}</div>
          
          <div class="gbl-footer__social">
            {% if section.settings.facebook_link != blank %}
              <a href="{{ section.settings.facebook_link }}" class="gbl-footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
                <svg class="gbl-footer__social-icon" aria-hidden="true" focusable="false" role="presentation" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
