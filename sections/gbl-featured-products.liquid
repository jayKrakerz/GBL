          "max": 12,
          "step": 3,
          "label": "Number of Products",
          "default": 6
        },
        {
          "type": "collection_list",
          "id": "filter_collections",
          "label": "Filter Collections",
          "limit": 5,
          "info": "Select collections to use as filters (max 5)"
        }
      ],
      "presets": [
        {
          "name": "GBL Featured Products",
          "settings": {
            "title": "Our New Arrival"
          }
        }
      ]
    }
