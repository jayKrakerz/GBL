{%- style -%}
  .gbl-featured-products {
    background-color: #ffffff;
  }

  .gbl-featured-products__container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0 20px;
  }

  .gbl-featured-products__header {
    margin-bottom: 30px;
  }

  .gbl-featured-products__title {
    font-size: 42px;
    font-weight: 400;
    margin: 0 0 30px 0;
    font-family: var(--font-heading-family);
    color: #000000;
  }

  .gbl-featured-products__tabs {
    display: flex;
    justify-content: flex-end;
    list-style: none;
    padding: 0;
    margin: 0;
    border-bottom: 1px solid #e8e8e8;
  }

  .gbl-featured-products__tab {
    padding: 12px 25px;
    margin: 0 5px;
    cursor: pointer;
    font-size: 16px;
    color: #888;
    position: relative;
    transition: all 0.3s ease;
  }

  .gbl-featured-products__tab:hover {
    color: #333;
  }

  .gbl-featured-products__tab.active {
    color: #333;
  }

  .gbl-featured-products__tab.active:after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #d4af37;
  }

  .gbl-featured-products__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-top: 40px;
  }

  .gbl-featured-products__card {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .gbl-featured-products__image-wrapper {
    position: relative;
    padding-bottom: 100%;
    background-color: #f7f4ef;
    margin-bottom: 15px;
    overflow: hidden;
  }

  .gbl-featured-products__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.5s ease;
  }

  .gbl-featured-products__card:hover .gbl-featured-products__image {
    transform: scale(1.05);
  }

  .gbl-featured-products__sale-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: #d4af37;
    color: white;
    padding: 5px 10px;
    font-size: 12px;
    text-transform: uppercase;
    z-index: 1;
  }

  .gbl-featured-products__wishlist {
    position: absolute;
    top: 10px;
    right: 10px;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    z-index: 1;
  }

  .gbl-featured-products__wishlist-icon {
    width: 24px;
    height: 24px;
    fill: none;
    stroke: #888;
    stroke-width: 1.5;
    transition: all 0.3s ease;
  }

  .gbl-featured-products__wishlist:hover .gbl-featured-products__wishlist-icon {
    stroke: #d4af37;
  }

  .gbl-featured-products__info {
    display: flex;
    flex-direction: column;
  }

  .gbl-featured-products__title-link {
    text-decoration: none;
    color: inherit;
  }

  .gbl-featured-products__product-title {
    font-size: 16px;
    margin: 0 0 5px 0;
    font-weight: 500;
    color: #333;
  }

  .price {
    font-size: 16px;
    font-weight: 400;
    display: flex;
    align-items: center;
  }

  .price--on-sale .price__regular {
    text-decoration: line-through;
    color: #888;
    margin-right: 10px;
  }

  .price__sale {
    color: #d4af37;
  }

  .price-range {
    display: flex;
    align-items: center;
  }

  .price-range__dash {
    margin: 0 5px;
  }

  @media screen and (max-width: 990px) {
    .gbl-featured-products__grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .gbl-featured-products__tabs {
      overflow-x: auto;
      width: 100%;
      padding-bottom: 10px;
      justify-content: flex-start;
    }
  }

  @media screen and (max-width: 580px) {
    .gbl-featured-products__grid {
      grid-template-columns: 1fr;
    }
    
    .gbl-featured-products__title {
      font-size: 32px;
    }
  }
{%- endstyle -%}

