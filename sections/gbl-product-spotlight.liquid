{% comment %}
  GBL Accessories Featured Product Highlight
  - Split layout with product image on left and content on right
  - Elegant typography with product name and tagline
  - "View All Collection" CTA button
  - Product material tag
{% endcomment %}

{%- style -%}
    .gbl-featured-product {
      position: relative;
      overflow: hidden;
    }
  
    .gbl-featured-product__container {
      display: flex;
      flex-direction: row;
      width: 100%;
      padding-top: 80px;
      background-color: #ffffff;
    }
  
    .gbl-featured-product__image-column {
      width: 50%;
      position: relative;
    }
  
    .gbl-featured-product__image-wrapper {
      position: relative;
      width: 100%;
      height: 100%;
      overflow: hidden;
    }
  
    .gbl-featured-product__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
  
    .gbl-featured-product__product-tag {
      position: absolute;
      bottom: 30px;
      left: 30px;
      font-size: 14px;
      font-weight: 500;
      color: #ffffff;
      text-transform: uppercase;
      letter-spacing: 1px;
      background-color: rgba(0, 0, 0, 0.5);
      padding: 5px 12px;
      border-radius: 2px;
    }
  
    .gbl-featured-product__product-title {
      position: absolute;
      bottom: 80px;
      left: 30px;
      font-size: 40px;
      font-weight: 500;
      color: #ffffff;
      margin: 0;
      max-width: 80%;
      line-height: 1.2;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
  
    .gbl-featured-product__content-column {
      width: 50%;
      padding: 80px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background-color: #f7f4ef;
    }
  
    .gbl-featured-product__content-inner {
      max-width: 500px;
    }
  
    .gbl-featured-product__heading {
      font-size: 48px;
      font-weight: 500;
      color: #d4af37;
      margin: 0 0 30px 0;
      line-height: 1.2;
    }
  
    .gbl-featured-product__text {
      font-size: 16px;
      line-height: 1.6;
      color: #666;
      margin-bottom: 40px;
    }
  
    .gbl-featured-product__cta {
      display: inline-block;
      position: relative;
      font-size: 18px;
      font-weight: 500;
      color: #d4af37;
      text-decoration: none;
      padding-bottom: 5px;
      transition: all 0.3s ease;
    }
  
    .gbl-featured-product__cta:after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 1px;
      background-color: #d4af37;
    }
  
    .gbl-featured-product__cta-arrow {
      display: inline-block;
      margin-left: 10px;
      transition: transform 0.3s ease;
    }
  
    .gbl-featured-product__cta:hover .gbl-featured-product__cta-arrow {
      transform: translateX(5px);
    }
  
    .gbl-featured-product__decorative-circle {
      position: absolute;
      width: 300px;
      height: 300px;
      border: 1px solid #d4af37;
      border-radius: 50%;
      opacity: 0.3;
      pointer-events: none;
    }
  
    .gbl-featured-product__decorative-circle--top {
      top: -150px;
      right: -50px;
    }
  
    .gbl-featured-product__decorative-circle--bottom {
      bottom: -150px;
      right: 250px;
    }
  
    @media screen and (max-width: 990px) {
      .gbl-featured-product__container {
        flex-direction: column;
      }
  
      .gbl-featured-product__image-column,
      .gbl-featured-product__content-column {
        width: 100%;
      }
  
      .gbl-featured-product__image-wrapper {
        height: 500px;
      }
  
      .gbl-featured-product__content-column {
        padding: 60px 30px;
      }
  
      .gbl-featured-product__content-inner {
        max-width: 100%;
      }
  
      .gbl-featured-product__heading {
        font-size: 36px;
      }
    }
  
    @media screen and (max-width: 580px) {
      .gbl-featured-product__image-wrapper {
        height: 400px;
      }
  
      .gbl-featured-product__product-title {
        font-size: 30px;
        bottom: 60px;
      }
  
      .gbl-featured-product__content-column {
        padding: 40px 20px;
      }
  
      .gbl-featured-product__heading {
        font-size: 30px;
        margin-bottom: 20px;
      }
    }
  {%- endstyle -%}
  
  <div class="gbl-featured-product">
    <div class="gbl-featured-product__container">
      <div class="gbl-featured-product__image-column">
        <div class="gbl-featured-product__image-wrapper">
          {% if section.settings.image != blank %}
            {{ section.settings.image | image_url: width: 1000 | image_tag: 
              class: 'gbl-featured-product__image',
              loading: 'lazy',
              alt: section.settings.product_title
            }}
          {% else %}
            {{ 'lifestyle-1.jpg' | asset_url | image_tag: 
              class: 'gbl-featured-product__image',
              loading: 'lazy'
            }}
          {% endif %}
          
          {% if section.settings.product_title != blank %}
            <h2 class="gbl-featured-product__product-title">{{ section.settings.product_title }}</h2>
          {% endif %}
          
          {% if section.settings.product_tag != blank %}
            <div class="gbl-featured-product__product-tag">{{ section.settings.product_tag }}</div>
          {% endif %}
        </div>
      </div>
      
      <div class="gbl-featured-product__content-column">
        <div class="gbl-featured-product__content-inner">
          {% if section.settings.heading != blank %}
            <h2 class="gbl-featured-product__heading">{{ section.settings.heading }}</h2>
          {% endif %}
          
          {% if section.settings.text != blank %}
            <div class="gbl-featured-product__text">{{ section.settings.text }}</div>
          {% endif %}
          
          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="gbl-featured-product__cta">
              {{ section.settings.button_text }} <span class="gbl-featured-product__cta-arrow">→</span>
            </a>
          {% endif %}
        </div>
        
        <div class="gbl-featured-product__decorative-circle gbl-featured-product__decorative-circle--top"></div>
        <div class="gbl-featured-product__decorative-circle gbl-featured-product__decorative-circle--bottom"></div>
      </div>
    </div>
  </div>
  
  {% schema %}
    {
      "name": "Product Spotlight",
      "tag": "section",
      "class": "section",
      "settings": [
        {
          "type": "header",
          "content": "Image Settings"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title",
          "default": "Pavé Diamond Slim Signet"
        },
        {
          "type": "text",
          "id": "product_tag",
          "label": "Product Tag",
          "default": "24k Gold"
        },
        {
          "type": "header",
          "content": "Content Settings"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Never Let Anyone Dull Your Sparkle"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text Content",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "View All Collection"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ],
      "presets": [
        {
          "name": "GBL Product Spotlight",
          "settings": {
            "product_title": "Pavé Diamond Slim Signet",
            "product_tag": "24k Gold",
            "heading": "Never Let Anyone Dull Your Sparkle"
          }
        }
      ]
    }
    {% endschema %}